<body>

    <div class="container">
        <header>
            <h1 id="clock">00:00</h1>
            <p class="subtitle">오늘도 평온하고 생산적인 하루 보내세요.</p>
        </header>

        <div id="link-list">
            </div>

        <button class="add-btn" onclick="openModal()">
            <i class="ph ph-plus"></i> 새 페이지 추가
        </button>
    </div>

    <div class="modal-overlay" id="modalOverlay">
        <div class="modal">
            <h3 style="margin-bottom: 20px; font-weight: 400;">페이지 정보 입력</h3>
            <div class="input-group">
                <label>이름 (예: 공문 처리, 학습 자료)</label>
                <input type="text" id="linkTitle" placeholder="화면에 표시될 이름">
            </div>
            <div class="input-group">
                <label>URL 주소</label>
                <input type="text" id="linkUrl" placeholder="https://...">
            </div>
            <div class="modal-actions">
                <button class="btn btn-cancel" onclick="closeModal()">취소</button>
                <button class="btn btn-save" onclick="saveLink()">저장하기</button>
            </div>
        </div>
    </div>

    <script>
        // 초기 데이터 (예시)
        let links = JSON.parse(localStorage.getItem('myLinks')) || [
            { id: '1', title: '나이스(NEIS)', url: 'https://www.neis.go.kr' },
            { id: '2', title: 'K-에듀파인', url: 'https://klef.gne.go.kr' },
            { id: '3', title: '미리캔버스', url: 'https://www.miricanvas.com' }
        ];

        let editModeId = null; // 수정 중인 아이템 ID

        const listEl = document.getElementById('link-list');
        const modalOverlay = document.getElementById('modalOverlay');
        const titleInput = document.getElementById('linkTitle');
        const urlInput = document.getElementById('linkUrl');

        // --- 시계 기능 ---
        function updateClock() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            document.getElementById('clock').textContent = `${hours}:${minutes}`;
        }
        setInterval(updateClock, 1000);
        updateClock();

        // --- 렌더링 함수 ---
        function renderLinks() {
            listEl.innerHTML = '';
            links.forEach((link, index) => {
                const card = document.createElement('div');
                card.className = 'card';
                card.draggable = true;
                card.dataset.index = index;
                
                // 클릭 시 해당 URL로 이동
                card.onclick = (e) => {
                    // 버튼 클릭 시 이동 방지
                    if(e.target.closest('.actions')) return;
                    window.open(link.url, '_blank');
                };

                card.innerHTML = `
                    <div class="card-content">
                        <span class="card-title">${link.title}</span>
                        <span class="card-url">${new URL(link.url).hostname}</span>
                    </div>
                    <div class="actions">
                        <button class="icon-btn" onclick="openEdit('${link.id}')"><i class="ph ph-pencil-simple"></i></button>
                        <button class="icon-btn" onclick="deleteLink('${link.id}')"><i class="ph ph-trash"></i></button>
                    </div>
                `;

                // 드래그 이벤트 연결
                addDragEvents(card);
                listEl.appendChild(card);
            });
        }

        // --- 모달 & 데이터 관리 ---
        function openModal() {
            editModeId = null;
            titleInput.value = '';
            urlInput.value = '';
            modalOverlay.classList.add('open');
            titleInput.focus();
        }

        function openEdit(id) {
            editModeId = id;
            const target = links.find(l => l.id === id);
            if(target) {
                titleInput.value = target.title;
                urlInput.value = target.url;
                modalOverlay.classList.add('open');
            }
        }

        function closeModal() {
            modalOverlay.classList.remove('open');
        }

        function saveLink() {
            const title = titleInput.value.trim();
            let url = urlInput.value.trim();

            if (!title || !url) return;
            if (!url.startsWith('http')) url = 'https://' + url;

            if (editModeId) {
                // 수정
                const idx = links.findIndex(l => l.id === editModeId);
                if(idx > -1) {
                    links[idx].title = title;
                    links[idx].url = url;
                }
            } else {
                // 신규 추가
                links.push({
                    id: Date.now().toString(),
                    title: title,
                    url: url
                });
            }

            saveToStorage();
            renderLinks();
            closeModal();
        }

        function deleteLink(id) {
            if(confirm('이 페이지를 삭제하시겠습니까?')) {
                links = links.filter(l => l.id !== id);
                saveToStorage();
                renderLinks();
            }
        }

        function saveToStorage() {
            localStorage.setItem('myLinks', JSON.stringify(links));
        }

        // --- 드래그 앤 드롭 로직 (반사 효과 포함) ---
        let dragSrcEl = null;

        function addDragEvents(item) {
            item.addEventListener('dragstart', function(e) {
                dragSrcEl = this;
                e.dataTransfer.effectAllowed = 'move';
                e.dataTransfer.setData('text/html', this.innerHTML);
                this.classList.add('dragging');
            });

            item.addEventListener('dragover', function(e) {
                if (e.preventDefault) e.preventDefault();
                e.dataTransfer.dropEffect = 'move';
                return false;
            });

            item.addEventListener('dragenter', function(e) {
                this.classList.add('over');
            });

            item.addEventListener('dragleave', function(e) {
                this.classList.remove('over');
            });

            item.addEventListener('drop', function(e) {
                if (e.stopPropagation) e.stopPropagation();

                if (dragSrcEl !== this) {
                    const srcIndex = Number(dragSrcEl.dataset.index);
                    const targetIndex = Number(this.dataset.index);

                    // 배열 순서 변경
                    const itemToMove = links[srcIndex];
                    links.splice(srcIndex, 1);
                    links.splice(targetIndex, 0, itemToMove);
                    
                    saveToStorage();
                    renderLinks();
                }
                return false;
            });

            item.addEventListener('dragend', function(e) {
                this.classList.remove('dragging');
                document.querySelectorAll('.card').forEach(col => col.classList.remove('over'));
            });
        }

        // 초기 실행
        renderLinks();

        // 배경 클릭시 모달 닫기
        modalOverlay.addEventListener('click', (e) => {
            if(e.target === modalOverlay) closeModal();
        });
    </script>
</body>
</html>
